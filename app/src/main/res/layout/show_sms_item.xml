<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/idx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. " />

        <TextView
            android:id="@+id/p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/idx"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/idx"
            android:text="source: "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/p1"
            android:layout_toEndOf="@id/p1"
            android:text="微信" />

        <TextView
            android:id="@+id/p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/p1"
            android:layout_alignStart="@id/p1"
            android:text="sender: "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/p2"
            android:layout_toEndOf="@id/p2"
            android:text="Jachin" />

        <TextView
            android:id="@+id/p3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/p2"
            android:layout_marginStart="90dp"
            android:layout_toEndOf="@id/p2"
            android:text="date: "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/p3"
            android:layout_toEndOf="@id/p3"
            android:text="2019-5-30" />

        <TextView
            android:layout_alignStart="@id/p2"
            android:layout_below="@id/p2"
            android:textColor="#000000"
            android:text="content: "
            android:id="@+id/p4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toEndOf="@id/p4"
            android:layout_alignTop="@id/p4"
            android:text="haha"
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</android.support.v7.widget.CardView>